              title Menu
              path d=("M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z") /
        / .w-full.block.justify-end.lg:flex.lg:items-center.lg:w-auto.ml-auto
        .flex.items-center.text-white.flex-1.justify-end
          .flex.text-sm.items-center.justify-end
            a.block.mt-4.lg:inline-block.lg:mt-0.text-teal-200.hover:text-white.mr-4 href="#responsive-header" 
              | Profils
            a.inline-block.text-sm.px-4.py-2.leading-none.border.rounded.text-white.border-white.ml-2.hover:border-transparent.hover:text-teal-500.hover:bg-white.mt-4.lg:mt-0 href="#"  Contact

