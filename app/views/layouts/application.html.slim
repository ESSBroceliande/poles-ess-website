            line x1="4" y1="4" x2="80" y2="80"  rx="8" stroke-width="15"
        .text-xl
          div data-action="mouseenter->main-menu#openBlockMenu mouseleave->main-menu#closeBlockMenu"
            = active_link_to 'Découvrir', root_path, title: "Découvrir", class: "block w-full px-6 py-4 hover:bg-gray-800 active:bg-gray-800", active: :inclusive
            nav.block-menu.absolute.top-0.left-side-menu.w-screen-side-menu.bg-gray-800.text-white.hidden data-target="main-menu.blockMenu"
              .p-6
                h3 Découvrir
                p Découvrir et faire connaître une économie alternative : sociale, solidaire et écologique
        .text-xl
          = active_link_to 'Thème 1', "#", title: "Thème 1", class: "block w-full px-6 py-4 hover:bg-gray-800 active:bg-gray-800", active: :inclusive
