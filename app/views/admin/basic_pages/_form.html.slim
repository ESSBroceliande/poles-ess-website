= f.form_errors

.form-group.required
  = f.label :title, class: "font-weight-bold"
  = f.text_field :title, class: 'form-control'

.form-group
  label.font-weight-bold ThÃ¨mes
  .form-group
    - Theme.all.each do |theme|
      .form-check.form-check-inline
        => f.check_box :theme_ids, {multiple: true,
                  checked: f.object.themes.include?(theme),
                  class: 'form-check-input'},
                  theme.id, nil
        = f.label :theme_ids, theme.title, value: theme.id, class: "form-check-label"

.form-group
  label.font-weight-bold Pages principales
  .form-group
    - MainPage.all.each do |main_page|
      .form-check.form-check-inline
        => f.check_box :main_page_ids, {multiple: true,
                  checked: f.object.main_pages.include?(main_page),
                  class: 'form-check-input'},
                  main_page.id, nil
        = f.label :main_page_ids, main_page.title, value: main_page.id, class: "form-check-label"

.form-group
  = f.label :content, class: "font-weight-bold"
  = f.rich_text_area :content

/ = render partial: 'admin/shared/picture_form', locals: { \
/   f: f, \
/   destroy_path: f.object.image.present? ? destroy_upload_admin_basic_page_path(f.object, f.object.image.id, redirect: :edit) : nil}

= render "admin/resources/nested_form", f: f

= render "admin/shared/action_btns", f: f, index_path: admin_basic_pages_path

