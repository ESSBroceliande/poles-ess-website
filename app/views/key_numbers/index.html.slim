- content_for :title, 'Chiffres cl√©s'

= render layout: 'layouts/base' do
  .flex.flex-wrap.flex-col.md:flex-row
    - @key_numbers.order(:position).each do |key_number|
      .md:w-1/3
        .max-w-md.overflow-hidden.shadow-lg.border.border-solid.border-gray-300.mb-4.mr-4
          .div
            .flex.flex-col.px-12.py-8.items-center
              h3.itc-demi.text-8xl = key_number.number
              p.text-3xl.uppercase.text-center = key_number.title

            p.px-6.py-4.text-right.text-sm.italic = key_number.source
          - if key_number.description.present?
            .px-6.py-4.bg-c-gray-light
              == key_number.description